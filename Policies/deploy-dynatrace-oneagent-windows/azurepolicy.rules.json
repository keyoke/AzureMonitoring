{
	"if": {
		"allOf": [
			{
				"field": "type",
				"equals": "Microsoft.Compute/virtualMachines"
			},
			{
				"field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
				"equals": "Windows"
			},
			{
				"field": "location",
				"In": "[parameters('targetRegions')]"
			}
		]
	},
	"then": {
		"effect": "[parameters('effect')]",
		"details": {
			"type": "Microsoft.Compute/virtualMachines/extensions",
			"existenceCondition": {
				"allOf": [
					{
						"field": "Microsoft.Compute/virtualMachines/extensions/type",
						"equals": "oneAgentWindows"
					},
					{
						"field": "Microsoft.Compute/virtualMachines/extensions/publisher",
						"equals": "dynatrace.ruxit"
					}
				]
			},
			"roleDefinitionIds": [
				"/providers/Microsoft.Authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
			],
			"deployment": {
				"properties": {
					"mode": "incremental",
					"template": {
						"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
						"contentVersion": "1.0.0.0",
						"parameters": {
							"vmName": {
								"type": "string"
							},
							"location": {
								"type": "string"
							},
							"dynatracePaasToken": {
								"type": "secureString"
							},
							"dynatraceEnvironmentID": {
								"type": "string"
							},
							"dynatraceServerUrl": {
								"type": "string"
							},
							"dynatraceEnableLogAnalytics": {
								"type": "bool"
							},
							"dynatraceHostGroup": {
								"type": "string"
							}
						},
						"resources": [
							{
								"name": "[concat(parameters('vmName'),'/oneAgentWindows')]",
								"type": "Microsoft.Compute/virtualMachines/extensions",
								"location": "[parameters('location')]",
								"apiVersion": "2021-03-01",
								"properties": {
									"autoUpgradeMinorVersion": true,
									"publisher": "dynatrace.ruxit",
									"type": "oneAgentWindows",
									"typeHandlerVersion": "1.0",
									"settings": {
										"tenantId": "[parameters('dynatraceEnvironmentID')]",
										"server": "[parameters('dynatraceServerUrl')]",
										"enableLogAnalytics": "[parameters('dynatraceEnableLogAnalytics')]",
										"hostGroup": "[parameters('dynatraceHostGroup')]"
									},
									"protectedSettings": {
										"token": "[parameters('dynatracePaasToken')]"
									}
								}
							}
						],
						"outputs": {
							"policy": {
								"type": "string",
								"value": "[concat('Enabled Dynatrace OneAgent for Windows VM', ': ', parameters('vmName'))]"
							}
						}
					},
					"parameters": {
						"vmName": {
							"value": "[field('name')]"
						},
						"location": {
							"value": "[field('location')]"
						},
						"dynatracePaasToken": {
							"value": "[parameters('dynatracePaasToken')]"
						},
						"dynatraceEnvironmentID": {
							"value": "[parameters('dynatraceEnvironmentID')]"
						},
						"dynatraceServerUrl": {
							"value": "[parameters('dynatraceServerUrl')]"
						},
						"dynatraceEnableLogAnalytics": {
							"value": "[parameters('dynatraceEnableLogAnalytics')]"
						},
						"dynatraceHostGroup": {
							"value": "[parameters('dynatraceHostGroup')]"
						}
					}
				}
			}
		}
	}
}